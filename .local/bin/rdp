# /usr/bin/xfreerdp /cert-ignore /d:example.com /u:john.doe /p:$(cat ~/.config/password_store/password_1) /size:2400x1300 /scale:140 /v:hostname.example.com

# /usr/bin/xfreerdp /cert-ignore /d:example.com /u:john.doe /p:secret /size:3000x1900 /scale:140 /v:hostname.example.com

